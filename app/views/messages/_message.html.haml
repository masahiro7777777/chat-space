.messages__box
  .messages__box__info
    .messages__box__info__talker
      = message.user.name
    .messages__box__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .messages__box__comment
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'messages__box__comment__image' if message.image.present?